generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model NguoiDung {
  id                          String              @id @default(cuid())
  email                       String              @unique
  matKhau                     String
  hoTen                       String
  vaiTro                      VaiTro              @default(SINHVIEN)
  gioiTinh                    GioiTinh?
  maSV                        String?             @db.VarChar(50)
  maCB                        String?             @db.VarChar(50)
  maLop                       String?             @db.VarChar(50)
  maKhoa                      String?             @db.VarChar(255)
  soDT                        String?             @db.VarChar(30)
  ngaySinh                    DateTime?
  avatarUrl                   String?             @db.VarChar(255)
  isActive                    Boolean             @default(true)
  resetPasswordToken          String?
  resetPasswordTokenExpiresAt DateTime?
  lastLoginAt                 DateTime?
  ghiChu                      String?
  createdAt                   DateTime            @default(now())
  updatedAt                   DateTime            @updatedAt
  dangKy                      DangKyHoatDong[]
  diemDanh                    DangKyHoatDong[]    @relation("NguoiDungDiemDanh")
  phanHoi                     PhanHoiHoatDong[]
  DiemDanhNguoiDung           DiemDanhNguoiDung[]
  thongBao                    ThongBao[]
  faceProfile                 FaceProfile?
  phanCong                    PhanCong[]          @relation("PhanCongGiangVien")
  hoatDongDaTao               HoatDong[]          @relation("HoatDongNguoiTao")
  hoatDongPhuTrach            HoatDong[]          @relation("HoatDongNguoiPhuTrach")
  lopHocId                    String?
  lopHoc                      LopHoc?             @relation("SinhVienLop", fields: [lopHocId], references: [id])

  @@index([email])
  @@index([maSV])
  @@index([maCB])
  @@index([vaiTro, isActive])
  @@index([resetPasswordTokenExpiresAt])
}

model Khoa {
  id        String   @id @default(cuid())
  maKhoa    String   @unique @db.VarChar(50)
  tenKhoa   String   @db.VarChar(255)
  moTa      String?  @db.Text
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  lopHoc    LopHoc[]

  @@index([maKhoa])
  @@index([isActive])
}

model LopHoc {
  id            String   @id @default(uuid())
  maLop         String   @unique
  tenLop        String   
  khoaId        String
  khoa          Khoa        @relation(fields: [khoaId], references: [id])
  namNhapHoc    Int      
  sinhVien      NguoiDung[] @relation("SinhVienLop")
  phanCong      PhanCong[]  @relation("PhanCongLopHoc")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model NamHoc {
  id             String           @id @default(cuid())
  ma             String           @unique
  nienKhoa       String           @unique
  ten            String?
  batDau         DateTime
  ketThuc        DateTime
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  hocKy          HocKy[]          @relation
  hoatDong       HoatDong[]       @relation("HoatDongNamHoc")
  phanCong       PhanCong[]       @relation("PhanCongNamHoc")

  @@index([isActive, batDau])
  @@index([batDau, ketThuc])
}

model HocKy {
  id             String           @id @default(cuid())
  ma             String           @unique
  ten            String
  thuTu          Int?
  moTa           String?
  batDau         DateTime
  ketThuc        DateTime
  isActive       Boolean          @default(true)
  namHocId       String
  namHoc         NamHoc           @relation(fields: [namHocId], references: [id], onDelete: Cascade)
  hoatDong       HoatDong[]       @relation("HoatDongHocKy")
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@index([namHocId, isActive, thuTu])
  @@index([batDau, ketThuc])
}

model HoatDong {
  id                 String                   @id @default(cuid())
  tieuDe             String
  moTa               String?                  @db.Text
  yeuCau             Json?
  huongDan           Json?
  diemCong           Int                      @default(0)
  batDauLuc          DateTime?
  ketThucLuc         DateTime?
  diaDiem            String?
  sucChuaToiDa       Int?
  hinhAnh            Json?
  isFeatured         Boolean                  @default(false)
  isPublished        Boolean                  @default(true)
  hanDangKy          DateTime?
  hanHuyDangKy       DateTime?
  phuongThucDiemDanh AttendanceMethod         @default(QR)
  trangThaiDuyet     TrangThaiDuyetHoatDong   @default(DA_DUYET)
  nguoiTaoId         String?
  nguoiPhuTrachId    String?
  lyDoTuChoi         String?                  @db.Text
  hocKyId            String?
  namHocId           String?
  createdAt          DateTime                 @default(now())
  updatedAt          DateTime                 @updatedAt
  dangKy             DangKyHoatDong[]
  phanHoi            PhanHoiHoatDong[]
  nhomDiem           NhomDiem                 @default(NHOM_2)
  DiemDanhNguoiDung  DiemDanhNguoiDung[]
  hocKyRef           HocKy?                   @relation("HoatDongHocKy", fields: [hocKyId], references: [id])
  namHocRef          NamHoc?                  @relation("HoatDongNamHoc", fields: [namHocId], references: [id])
  nguoiTao           NguoiDung?               @relation("HoatDongNguoiTao", fields: [nguoiTaoId], references: [id])
  nguoiPhuTrach      NguoiDung?               @relation("HoatDongNguoiPhuTrach", fields: [nguoiPhuTrachId], references: [id])

  @@index([isPublished, batDauLuc])
  @@index([trangThaiDuyet])
  @@index([nguoiTaoId])
  @@index([nguoiPhuTrachId])
  @@index([hocKyId])
  @@index([namHocId])
}

model DangKyHoatDong {
  id             String          @id @default(cuid())
  nguoiDungId    String
  hoatDongId     String
  trangThai      TrangThaiDangKy @default(DANG_KY)
  lyDoHuy        String?
  ghiChu         String?
  dangKyLuc      DateTime        @default(now())
  duyetLuc       DateTime?
  updatedAt      DateTime        @updatedAt
  diemDanhLuc    DateTime?
  diemDanhBoiId  String?
  diemDanhGhiChu String?

  nguoiDung      NguoiDung           @relation(fields: [nguoiDungId], references: [id])
  hoatDong       HoatDong            @relation(fields: [hoatDongId], references: [id])
  diemDanhBoi    NguoiDung?          @relation("NguoiDungDiemDanh", fields: [diemDanhBoiId], references: [id])
  phanHoi        PhanHoiHoatDong?
  lichSuDiemDanh DiemDanhNguoiDung[]

  @@unique([nguoiDungId, hoatDongId])
  @@index([hoatDongId, trangThai])
  @@index([nguoiDungId, trangThai])
  @@index([hoatDongId, diemDanhLuc])
}

model DiemDanhNguoiDung {
  id          String           @id @default(cuid())
  dangKyId    String
  nguoiDungId String
  hoatDongId  String
  trangThai   TrangThaiDangKy
  loai        AttendancePhase  @default(CHECKIN)
  ghiChu      String?
  anhDinhKem  Json?
  faceMatch   FaceMatchStatus?
  faceScore   Float?
  faceMeta    Json?
  taoLuc      DateTime         @default(now())

  dangKy    DangKyHoatDong @relation(fields: [dangKyId], references: [id])
  nguoiDung NguoiDung      @relation(fields: [nguoiDungId], references: [id])
  hoatDong  HoatDong       @relation(fields: [hoatDongId], references: [id])

  @@index([dangKyId])
  @@index([nguoiDungId])
  @@index([hoatDongId])
}

model PhanHoiHoatDong {
  id          String           @id @default(cuid())
  dangKyId    String           @unique
  nguoiDungId String
  hoatDongId  String
  noiDung     String
  danhGia     Int?
  minhChung   Json?
  trangThai   TrangThaiPhanHoi @default(CHO_DUYET)
  lydoTuChoi  String?          @db.Text
  taoLuc      DateTime         @default(now())
  capNhatLuc  DateTime         @updatedAt

  dangKy    DangKyHoatDong @relation(fields: [dangKyId], references: [id])
  nguoiDung NguoiDung      @relation(fields: [nguoiDungId], references: [id])
  hoatDong  HoatDong       @relation(fields: [hoatDongId], references: [id])

  @@unique([nguoiDungId, hoatDongId])
  @@index([hoatDongId])
  @@index([nguoiDungId])
}

model ThongBao {
  id          String    @id @default(cuid())
  nguoiDungId String
  tieuDe      String
  noiDung     String
  loai        String    @db.VarChar(30)
  duLieu      Json?
  daDoc       Boolean   @default(false)
  daDocLuc    DateTime?
  createdAt   DateTime  @default(now())

  nguoiDung  NguoiDung @relation(fields: [nguoiDungId], references: [id])

  @@index([nguoiDungId, daDoc])
  @@index([nguoiDungId, createdAt])
}

model FaceProfile {
  id          String   @id @default(cuid())
  nguoiDungId String   @unique
  descriptors Json
  samples     Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user NguoiDung @relation(fields: [nguoiDungId], references: [id], onDelete: Cascade)
}

model PhanCong {
  id           String        @id @default(cuid())
  giangVienId  String
  giangVien    NguoiDung     @relation("PhanCongGiangVien", fields: [giangVienId], references: [id], onDelete: Cascade)
  lopHocId     String
  lopHoc       LopHoc        @relation("PhanCongLopHoc", fields: [lopHocId], references: [id], onDelete: Cascade)
  namHocId     String
  namHoc       NamHoc        @relation("PhanCongNamHoc", fields: [namHocId], references: [id])
  loaiPhanCong LoaiPhanCong  @default(CHU_NHIEM)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@unique([giangVienId, lopHocId, namHocId, loaiPhanCong])
  @@index([giangVienId])
  @@index([lopHocId])
  @@index([namHocId])
  @@index([loaiPhanCong])
}

enum VaiTro {
  SINHVIEN
  GIANGVIEN
  ADMIN
}

enum GioiTinh {
  Nam
  Nữ
  Khác
}

enum TrangThaiDangKy {
  DANG_KY
  DANG_THAM_GIA
  DA_HUY
  DA_THAM_GIA
  VANG_MAT
  CHO_DUYET
}

enum TrangThaiPhanHoi {
  CHO_DUYET
  DA_DUYET
  BI_TU_CHOI
}

enum AttendancePhase {
  CHECKIN
  CHECKOUT
}

enum NhomDiem {
  NHOM_1
  NHOM_2
  NHOM_3
}

enum AttendanceMethod {
  QR
  PHOTO
}

enum FaceMatchStatus {
  APPROVED
  REVIEW
  REJECTED
}

enum LoaiPhanCong {
  CHU_NHIEM
  GIANG_DAY
}

enum TrangThaiDuyetHoatDong {
  CHO_DUYET
  DA_DUYET
  BI_TU_CHOI
}
