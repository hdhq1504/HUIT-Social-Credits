generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model NguoiDung {
  id                          String              @id @default(cuid())
  email                       String              @unique
  matKhau                     String
  hoTen                       String
  vaiTro                      VaiTro              @default(SINHVIEN)
  gioiTinh                    GioiTinh?
  maSV                        String?             @db.VarChar(50)
  maCB                        String?             @db.VarChar(50)
  maLop                       String?             @db.VarChar(50)
  maKhoa                      String?             @db.VarChar(255)
  soDT                        String?             @db.VarChar(30)
  ngaySinh                    DateTime?
  avatarUrl                   String?             @db.VarChar(255)
  isActive                    Boolean             @default(true)
  resetPasswordToken          String?
  resetPasswordTokenExpiresAt DateTime?
  lastLoginAt                 DateTime?
  ghiChu                      String?
  createdAt                   DateTime            @default(now())
  updatedAt                   DateTime            @updatedAt
  dangKy                      DangKyHoatDong[]
  diemDanh                    DangKyHoatDong[]    @relation("NguoiDungDiemDanh")
  phanHoi                     PhanHoiHoatDong[]
  DiemDanhNguoiDung           DiemDanhNguoiDung[]
  thongBao                    ThongBao[]
  faceProfile                 FaceProfile?
  hoiDongDaTao                HoiDongXetDiem[]    @relation("HoiDongNguoiTao")
  thanhVienHoiDong            ThanhVienHoiDong[]
  danhGiaSinhVien             DanhGiaSinhVien[]   @relation("DanhGiaSinhVienStudent")
  danhGiaCapNhat              DanhGiaSinhVien[]   @relation("DanhGiaSinhVienNguoiCapNhat")
  lopChuNhiem                 LopHoc[]            @relation("GiangVienChuNhiem")
  lopHocId                    String?
  lopHoc                      LopHoc?             @relation("SinhVienLop", fields: [lopHocId], references: [id])

  @@index([email])
  @@index([maSV])
  @@index([maCB])
  @@index([vaiTro, isActive])
  @@index([resetPasswordTokenExpiresAt])
}

model LopHoc {
  id            String   @id @default(uuid())
  maLop         String   @unique
  tenLop        String   
  khoaId        String
  khoa          Khoa     @relation(fields: [khoaId], references: [id])
  namNhapHoc    Int      
  giangVienChuNhiemId String?
  giangVienChuNhiem   NguoiDung? @relation("GiangVienChuNhiem", fields: [giangVienChuNhiemId], references: [id])
  sinhVien      NguoiDung[] @relation("SinhVienLop")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model NamHoc {
  id             String           @id @default(cuid())
  ma             String           @unique
  nienKhoa       String           @unique
  ten            String?
  batDau         DateTime
  ketThuc        DateTime
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  hocKy          HocKy[]
  hoatDong       HoatDong[]       @relation("HoatDongNamHoc")
  HoiDongXetDiem HoiDongXetDiem[]

  @@index([isActive, batDau])
  @@index([batDau, ketThuc])
}

model HocKy {
  id             String           @id @default(cuid())
  ma             String           @unique
  ten            String
  thuTu          Int?
  moTa           String?
  batDau         DateTime
  ketThuc        DateTime
  isActive       Boolean          @default(true)
  namHocId       String
  namHoc         NamHoc           @relation(fields: [namHocId], references: [id], onDelete: Cascade)
  hoatDong       HoatDong[]       @relation("HoatDongHocKy")
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  HoiDongXetDiem HoiDongXetDiem[]

  @@index([namHocId, isActive, thuTu])
  @@index([batDau, ketThuc])
}

model HoatDong {
  id                 String              @id @default(cuid())
  tieuDe             String
  moTa               String?             @db.Text
  yeuCau             Json?
  huongDan           Json?
  diemCong           Int                 @default(0)
  batDauLuc          DateTime?
  ketThucLuc         DateTime?
  diaDiem            String?
  sucChuaToiDa       Int?
  hinhAnh            Json?
  isFeatured         Boolean             @default(false)
  isPublished        Boolean             @default(true)
  hanDangKy          DateTime?
  hanHuyDangKy       DateTime?
  phuongThucDiemDanh AttendanceMethod    @default(QR)
  hocKyId            String?
  namHocId           String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  dangKy             DangKyHoatDong[]
  phanHoi            PhanHoiHoatDong[]
  nhomDiem           NhomDiem            @default(NHOM_2)
  DiemDanhNguoiDung  DiemDanhNguoiDung[]
  hocKyRef           HocKy?              @relation("HoatDongHocKy", fields: [hocKyId], references: [id])
  namHocRef          NamHoc?             @relation("HoatDongNamHoc", fields: [namHocId], references: [id])

  @@index([isPublished, batDauLuc])
  @@index([hocKyId])
  @@index([namHocId])
}

model DangKyHoatDong {
  id             String          @id @default(cuid())
  nguoiDungId    String
  hoatDongId     String
  trangThai      TrangThaiDangKy @default(DANG_KY)
  lyDoHuy        String?
  ghiChu         String?
  dangKyLuc      DateTime        @default(now())
  duyetLuc       DateTime?
  updatedAt      DateTime        @updatedAt
  diemDanhLuc    DateTime?
  diemDanhBoiId  String?
  diemDanhGhiChu String?

  nguoiDung      NguoiDung           @relation(fields: [nguoiDungId], references: [id])
  hoatDong       HoatDong            @relation(fields: [hoatDongId], references: [id])
  diemDanhBoi    NguoiDung?          @relation("NguoiDungDiemDanh", fields: [diemDanhBoiId], references: [id])
  phanHoi        PhanHoiHoatDong?
  lichSuDiemDanh DiemDanhNguoiDung[]

  @@unique([nguoiDungId, hoatDongId])
  @@index([hoatDongId, trangThai])
  @@index([nguoiDungId, trangThai])
  @@index([hoatDongId, diemDanhLuc])
}

model DiemDanhNguoiDung {
  id          String           @id @default(cuid())
  dangKyId    String
  nguoiDungId String
  hoatDongId  String
  trangThai   TrangThaiDangKy
  loai        AttendancePhase  @default(CHECKIN)
  ghiChu      String?
  anhDinhKem  Json?
  faceMatch   FaceMatchStatus?
  faceScore   Float?
  faceMeta    Json?
  taoLuc      DateTime         @default(now())

  dangKy    DangKyHoatDong @relation(fields: [dangKyId], references: [id])
  nguoiDung NguoiDung      @relation(fields: [nguoiDungId], references: [id])
  hoatDong  HoatDong       @relation(fields: [hoatDongId], references: [id])

  @@index([dangKyId])
  @@index([nguoiDungId])
  @@index([hoatDongId])
}

model PhanHoiHoatDong {
  id          String           @id @default(cuid())
  dangKyId    String           @unique
  nguoiDungId String
  hoatDongId  String
  noiDung     String
  danhGia     Int?
  minhChung   Json?
  trangThai   TrangThaiPhanHoi @default(CHO_DUYET)
  lydoTuChoi  String?          @db.Text
  taoLuc      DateTime         @default(now())
  capNhatLuc  DateTime         @updatedAt

  dangKy    DangKyHoatDong @relation(fields: [dangKyId], references: [id])
  nguoiDung NguoiDung      @relation(fields: [nguoiDungId], references: [id])
  hoatDong  HoatDong       @relation(fields: [hoatDongId], references: [id])

  @@unique([nguoiDungId, hoatDongId])
  @@index([hoatDongId])
  @@index([nguoiDungId])
}

model ThongBao {
  id          String    @id @default(cuid())
  nguoiDungId String
  tieuDe      String
  noiDung     String
  loai        String    @db.VarChar(30)
  duLieu      Json?
  daDoc       Boolean   @default(false)
  daDocLuc    DateTime?
  createdAt   DateTime  @default(now())

  nguoiDung  NguoiDung @relation(fields: [nguoiDungId], references: [id])

  @@index([nguoiDungId, daDoc])
  @@index([nguoiDungId, createdAt])
}

model HoiDongXetDiem {
  id            String             @id @default(cuid())
  name          String
  description   String?
  academicYear  String
  semesterLabel String
  namHocId      String?
  hocKyId       String?
  facultyCode   String?
  status        TrangThaiHoiDong   @default(PREPARING)
  createdById   String
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  finalizedAt   DateTime?
  exportUrl     String?
  exportPath    String?
  namHoc        NamHoc?            @relation(fields: [namHocId], references: [id])
  hocKy         HocKy?             @relation(fields: [hocKyId], references: [id])
  createdBy     NguoiDung          @relation("HoiDongNguoiTao", fields: [createdById], references: [id])
  members       ThanhVienHoiDong[]
  evaluations   DanhGiaSinhVien[]

  @@index([namHocId])
  @@index([hocKyId])
  @@index([status])
}

model ThanhVienHoiDong {
  id            String         @id @default(cuid())
  councilId     String
  userId        String
  roleInCouncil String
  createdAt     DateTime       @default(now())
  council       HoiDongXetDiem @relation(fields: [councilId], references: [id], onDelete: Cascade)
  user          NguoiDung      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([councilId, userId])
  @@index([userId])
}

model DanhGiaSinhVien {
  id          String                @id @default(cuid())
  councilId   String
  studentId   String
  totalPoints Int                   @default(0)
  result      KetQuaDanhGiaSinhVien @default(PENDING)
  note        String?
  updatedById String?
  updatedAt   DateTime?
  createdAt   DateTime              @default(now())
  council     HoiDongXetDiem        @relation(fields: [councilId], references: [id], onDelete: Cascade)
  student     NguoiDung             @relation("DanhGiaSinhVienStudent", fields: [studentId], references: [id], onDelete: Cascade)
  updatedBy   NguoiDung?            @relation("DanhGiaSinhVienNguoiCapNhat", fields: [updatedById], references: [id])

  @@unique([councilId, studentId])
  @@index([studentId])
  @@index([result])
}

model FaceProfile {
  id          String   @id @default(cuid())
  nguoiDungId String   @unique
  descriptors Json
  samples     Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user NguoiDung @relation(fields: [nguoiDungId], references: [id], onDelete: Cascade)
}

enum VaiTro {
  SINHVIEN
  GIANGVIEN
  NHANVIEN
  ADMIN
}

enum GioiTinh {
  Nam
  Nữ
  Khác
}

enum TrangThaiDangKy {
  DANG_KY
  DA_HUY
  DA_THAM_GIA
  VANG_MAT
  CHO_DUYET
}

enum TrangThaiPhanHoi {
  CHO_DUYET
  DA_DUYET
  BI_TU_CHOI
}

enum AttendancePhase {
  CHECKIN
  CHECKOUT
}

enum NhomDiem {
  NHOM_1
  NHOM_2
  NHOM_3
}

enum AttendanceMethod {
  QR
  PHOTO
}

enum FaceMatchStatus {
  APPROVED
  REVIEW
  REJECTED
}

enum TrangThaiHoiDong {
  PREPARING
  IN_PROGRESS
  FINALIZED
}

enum KetQuaDanhGiaSinhVien {
  PENDING
  PASSED
  FAILED
}
