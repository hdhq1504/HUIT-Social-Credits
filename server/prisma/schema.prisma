generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model NguoiDung {
  id                          String              @id @default(cuid())
  email                       String              @unique
  matKhau                     String
  hoTen                       String
  vaiTro                      VaiTro              @default(SINHVIEN)
  gioiTinh                    GioiTinh?
  maSV                        String?             @db.VarChar(50)
  maCB                        String?             @db.VarChar(50)
  maLop                       String?             @db.VarChar(50)
  maKhoa                      String?             @db.VarChar(255)
  soDT                        String?             @db.VarChar(30)
  ngaySinh                    DateTime?
  avatarUrl                   String?             @db.VarChar(255)
  isActive                    Boolean             @default(true)
  resetPasswordToken          String?
  resetPasswordTokenExpiresAt DateTime?
  lastLoginAt                 DateTime?
  ghiChu                      String?
  createdAt                   DateTime            @default(now())
  updatedAt                   DateTime            @updatedAt
  dangKy                      DangKyHoatDong[]
  diemDanh                    DangKyHoatDong[]    @relation("NguoiDungDiemDanh")
  phanHoi                     PhanHoiHoatDong[]
  DiemDanhNguoiDung           DiemDanhNguoiDung[]
  thongBao                    ThongBao[]

  @@index([email])
  @@index([maSV])
  @@index([maCB])
  @@index([vaiTro, isActive])
  @@index([resetPasswordTokenExpiresAt])
}

model DanhMucHoatDong {
  id        String     @id @default(cuid())
  ma        String     @unique
  ten       String
  moTa      String?
  nhomDiem  NhomDiem   @default(NHOM_2)
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  hoatDong  HoatDong[]

  @@index([isActive, nhomDiem])
}

model HoatDong {
  id                String              @id @default(cuid())
  maHoatDong        String?             @unique
  tieuDe            String
  moTa              String?
  quyenLoi          Json?
  trachNhiem        Json?
  yeuCau            Json?
  huongDan          Json?
  diemCong          Int                 @default(0)
  batDauLuc         DateTime?
  ketThucLuc        DateTime?
  diaDiem           String?
  sucChuaToiDa      Int?
  hinhAnh           String?             @db.VarChar(255)
  isFeatured        Boolean             @default(false)
  isPublished       Boolean             @default(true)
  hocKy             String?             @db.VarChar(20)
  namHoc            String?             @db.VarChar(20)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  dangKy            DangKyHoatDong[]
  phanHoi           PhanHoiHoatDong[]
  danhMucId         String?
  nhomDiem          NhomDiem            @default(NHOM_2)
  danhMucRef        DanhMucHoatDong?    @relation(fields: [danhMucId], references: [id])
  DiemDanhNguoiDung DiemDanhNguoiDung[]

  @@index([isPublished, batDauLuc])
  @@index([danhMucId])
}

model DangKyHoatDong {
  id             String          @id @default(cuid())
  nguoiDungId    String
  hoatDongId     String
  trangThai      TrangThaiDangKy @default(DANG_KY)
  lyDoHuy        String?
  ghiChu         String?
  dangKyLuc      DateTime        @default(now())
  duyetLuc       DateTime?
  updatedAt      DateTime        @updatedAt
  diemDanhLuc    DateTime?
  diemDanhBoiId  String?
  diemDanhGhiChu String?

  nguoiDung      NguoiDung           @relation(fields: [nguoiDungId], references: [id])
  hoatDong       HoatDong            @relation(fields: [hoatDongId], references: [id])
  diemDanhBoi    NguoiDung?          @relation("NguoiDungDiemDanh", fields: [diemDanhBoiId], references: [id])
  phanHoi        PhanHoiHoatDong?
  lichSuDiemDanh DiemDanhNguoiDung[]

  @@unique([nguoiDungId, hoatDongId])
  @@index([hoatDongId, trangThai])
  @@index([nguoiDungId, trangThai])
  @@index([hoatDongId, diemDanhLuc])
}

model DiemDanhNguoiDung {
  id          String          @id @default(cuid())
  dangKyId    String
  nguoiDungId String
  hoatDongId  String
  trangThai   TrangThaiDangKy
  loai        AttendancePhase @default(CHECKIN)
  ghiChu      String?
  anhDinhKem  String?         @db.Text
  anhMimeType String?         @db.VarChar(100)
  anhTen      String?         @db.VarChar(255)
  taoLuc      DateTime        @default(now())

  dangKy    DangKyHoatDong @relation(fields: [dangKyId], references: [id])
  nguoiDung NguoiDung      @relation(fields: [nguoiDungId], references: [id])
  hoatDong  HoatDong       @relation(fields: [hoatDongId], references: [id])

  @@index([dangKyId])
  @@index([nguoiDungId])
  @@index([hoatDongId])
}

model PhanHoiHoatDong {
  id          String           @id @default(cuid())
  dangKyId    String           @unique
  nguoiDungId String
  hoatDongId  String
  noiDung     String
  danhGia     Int?
  minhChung   Json?
  trangThai   TrangThaiPhanHoi @default(CHO_DUYET)
  taoLuc      DateTime         @default(now())
  capNhatLuc  DateTime         @updatedAt

  dangKy    DangKyHoatDong @relation(fields: [dangKyId], references: [id])
  nguoiDung NguoiDung      @relation(fields: [nguoiDungId], references: [id])
  hoatDong  HoatDong       @relation(fields: [hoatDongId], references: [id])

  @@unique([nguoiDungId, hoatDongId])
  @@index([hoatDongId])
  @@index([nguoiDungId])
}

model ThongBao {
  id          String    @id @default(cuid())
  nguoiDungId String
  tieuDe      String
  noiDung     String
  loai        String    @db.VarChar(30)
  duLieu      Json?
  daDoc       Boolean   @default(false)
  daDocLuc    DateTime?
  createdAt   DateTime  @default(now())

  nguoiDung   NguoiDung @relation(fields: [nguoiDungId], references: [id])

  @@index([nguoiDungId, daDoc])
  @@index([nguoiDungId, createdAt])
}

enum VaiTro {
  SINHVIEN
  GIANGVIEN
  NHANVIEN
  ADMIN
}

enum GioiTinh {
  Nam
  Nữ
  Khác
}

enum TrangThaiDangKy {
  DANG_KY
  DA_HUY
  DA_THAM_GIA
  VANG_MAT
}

enum TrangThaiPhanHoi {
  CHO_DUYET
  DA_DUYET
  BI_TU_CHOI
}

enum AttendancePhase {
  CHECKIN
  CHECKOUT
}

enum NhomDiem {
  NHOM_1
  NHOM_2
  NHOM_3
}
